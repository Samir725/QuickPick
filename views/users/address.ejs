<% layout("/layouts/boilerplate") %>

<div class="addressPage">
    <h1>Update Address</h1>

    <form action="/profile/address" method="POST">
        <input type="text" id="street" name="street" value="<%= user.address.street %>" placeholder="Street" required>
        <input type="text" id="city" name="city" value="<%= user.address.city %>" placeholder="City" required>
        <input type="text" id="state" name="state" value="<%= user.address.state %>" placeholder="State" required>
        <input type="text" id="country" name="country" value="<%= user.address.country %>" placeholder="Country" required>
        <button type="submit">Update Address</button>
    </form>
</div>