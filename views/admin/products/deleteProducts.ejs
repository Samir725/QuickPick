<% layout('admin/layouts/boilerplate') %>

<div class="delete-section">
    <h2>Delete Products</h2>

    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            <% for(let products of allProducts) { %>
                <tr>
                    <td><img src="<%= products.image %>" alt="<%= products.title %>"></td>
                    <td><span><%= products.title %></span></td>
                    <td><span><i class="fa-solid fa-indian-rupee-sign"></i><%= products.price %></span></td>
                    <td>
                        <form action="/admin/products/<%= products._id %>?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirmDelete()">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this product?');
    }
</script>