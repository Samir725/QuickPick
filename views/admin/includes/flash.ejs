<% if (success && success.length) { %>
    <div class="flash flash-success">
        <span><%= success %></span>
        <button class="flash-close" onclick="this.parentElement.style.display='none';">&times;</button>
    </div>
<% } %>
<% if (error && error.length) { %>
    <div class="flash flash-error">
        <span><%= error %></span>
        <button class="flash-close" onclick="this.parentElement.style.display='none';">&times;</button>
    </div>
<% } %>